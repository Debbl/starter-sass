{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "i18n:extract": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["src/locales"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "persistent": true
    },
    "db:gen": {
      "dependsOn": ["^build"]
    },
    "db:migrate": {
      "dependsOn": ["^build"]
    }
  }
}
